// standalone interpreter alternative to embedding

// we will store the file pointer here
file [0]

// this auto-runs
main {
    error lt(len(args), 2) jif
    set(mem, file, load_urbin(get(args, 1)))
    interpret(exec, @file, stack)
}

// this too
exit {
    free(@file)
}

// but this will only be accessed if the flux is intentionally redirected
error [
    pring("you need to pass a filename!\n")
]