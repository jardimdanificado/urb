enum {
    NB, 
    MALE, 
    FEMALE
}

macro Person 
{
    struct $1{
        name,
        age,
        weight,
        height,
        gender
    }
}

Person(joao)

scope main {
    set(mem, joao.name, "joao")
    set(mem, joao.age, 21)
    set(mem, joao.weight, 78)
    set(mem, joao.height, 159)
    set(mem, joao.gender, NB)

    pringln(@joao.name)
    println(@joao.age)
    println(@joao.weight)
    println(@joao.height)
    println(@joao.gender)
}
